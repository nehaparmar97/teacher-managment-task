

  
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>


    <style> 
    
        h1 {
    color: #052e5e;
    text-align: center;


    }
    #addteacher {
    background-color: #e0f7fa; /* Light blue background color */
    padding: 5px;
    border-radius: 4px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

#addteacher input {
    margin-bottom: 5px;
    padding: 4px;
    font-size: 15px;
    width: 18%;
    height: 20px;
}



#addteacher button {
    background-color: #0288d1; /* Blue button color */
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    height: 25px;
    align-self: center;
    margin-top: 5px;
    padding: 3px;
    padding-left: 10px;
    padding-right: 10px;
    padding-bottom: 5px;
    margin-left: 15px;
}


button[name="delete"] {
    background-color: #e61010;
}

        table { 
            font-family: arial, sans-serif; 
            border-collapse: collapse; 
            width: 100%; 
        } 
  
        td, 
        th { 
            border: 1px solid #dddddd; 
            text-align: left; 
            padding: 8px; 
        } 
  
        tr:nth-child(even) { 
            background-color: #abecf9; 
        } 
    </style>  
  
<body> 
    
  
    <form id="addteacher" action="/" method="post"> 
        <h1>Add teacher</h1>
        <input type="text" placeholder="Enter Full Name" name="name" required> 
        <input type="number" placeholder="Enter Age" name="age" required> 
        <input type="date" placeholder="Enter Date of Birth" name="dateOfBirth" required> 
        <input type="number" placeholder="Enter subject taught by he/she" name="subject_taught" required> 
        
        <button type="submit">Add</button> 
    </form> 
    <br>
    <form id ="addteacher" action="/search" method="post">
        <div class="container"><h3>Search teacher</h3>
        <input type="text" placeholder="name" name="name">
        <button type="submit">Search</button>
    </div>
    
    </form>
    <% if (typeof showAlert !== 'undefined' && showAlert) { %>
        <div style="color: red; font-weight: bold;">Teacher not found</div>
    <% } %>
    <br>

    <form id="addteacher" action="/filter" method="post">
        
            <h3>Filter teacher</h3>
            <label class="label">Filter by:</label>
            <select id="filterby" name="filterby">
                <option value="Age">Age</option>
                <option value="subjectTaught">Subject Taught</option>
            </select>
            <button type="submit">Apply Filter</button>
        
       
    </form>
    
    <br>
    <form id="addteacher" action="/avg" method="get">
        <button type="submit">Calculate Average No of classes</button>
      </form>
    
      <p>
        <% if (typeof avgsub !== 'undefined') { %>
          Average classes: <%= avgsub %>
        <% } else if (typeof error !== 'undefined') { %>
          <%= error %>
        <% } %>
      </p>
    
    
    
    <table id="addteacher"> 
        <h1>All teachers</h1> 
        <tr> 
            <th>Name</th> 
            <th>Age</th> 
            <th>Date of Birth</th> 
            <th>Subject taught</th> 
            <th>Update</th> 
            <th>Delete</th> 
        </tr> 
        <% data.forEach(teacher => { %> 
            <tr> 
                <td><%= teacher.name %></td> 
                <td><%= teacher.age %></td> 
                <td><%= teacher.dateOfBirth %></td> 
                <td>  <%=teacher.subject_taught %></td> 
                <td> 
                    <form action="/update" method="post" > 
                        <input type="text" style="display: none;" 
                            name="name" value="<%= teacher.name %>">
                       
                        <input type="text" name="newname" placeholder="Enter name" required>
                        <input type="number" name="newage"placeholder=" enter age" required>
                        <input type="date" name="newdob" placeholder="enter date of birth" required> 
                        <input type="number" name="newsubject" placeholder="enter subject taught" required>   
                        <button type="submit">Update</button> 
                    </form> 
                </td> 
                <td> 
                    <form action="/delete" method="post"> 
                         <input type="text" style="display: none;" 
                            name="name" value="<%= teacher.name %>"> 
                        <button type="submit" style="background-color: rgb(255, 143, 143);">Delete</button>  
                         
                        </form>  
                        
                </td> 
            </tr>   
        <% }); %> 
    </table> 
  
   

   

</body> 
  
</html>